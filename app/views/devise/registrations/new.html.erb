<% set_meta_tags(title:'サインアップ', description:'ユーザー登録画面です。') %>
<section>  
  <div class="container devise_field">
    <h2 class="fs-4 my-2"><%= t('.sign_up') %></h2>
  
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="field my-2">
        <%= f.label :email, class: 'user_form_label' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'user_form_field' %>
      </div>
    
      <div class="field my-2">
        <%= f.label :password, class: 'user_form_label' %>
        <% if @minimum_password_length %>
        <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'user_form_field' %>
      </div>
    
      <div class="field my-2">
        <%= f.label :password_confirmation, class: 'user_form_label' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'user_form_field' %>
        <div class="form-text">パスワードの確認のため、再度パスワードを入力してください。</div>
      </div>
    
      <div class="actions content-center mb-4">
        <%= f.submit t('.sign_up'), class:"btn btn-primary my-4" %>
        <div class="legal-text">
          上のボタンを押すことで
          <%= link_to "利用規約", privacy_policy_path %>
          および
          <br>
          <%= link_to "プライバシー規約", tos_path %>
          に同意するものとします。
        </div>
      </div>
    <% end %>
  
    <div class="my-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
